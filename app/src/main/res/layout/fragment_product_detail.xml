<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".code_files.ui.home.fragment.ProductDetailFragment">
<androidx.cardview.widget.CardView
    android:id="@+id/cardViewTopImage"
    android:layout_width="@dimen/margin_0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_15_dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerProductDetailPage"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="@dimen/margin_220_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:src="@mipmap/ic_back"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/txtViewChevroletComoro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chevrolet Comoro 2-door"
            android:textSize="@dimen/margin_14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/muli_semi_bold"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_15_dp"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerProductDetailPage"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtViewAED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AED 175,000"
            android:textSize="@dimen/margin_14sp"
            android:textColor="@color/green"
            android:fontFamily="@font/muli_semi_bold"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginStart="@dimen/margin_15_dp"
            app:layout_constraintTop_toBottomOf="@+id/txtViewChevroletComoro"
            app:layout_constraintStart_toStartOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnSourceMyCar"
        android:background="@drawable/drawable_button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_15_dp"
        android:layout_marginStart="@dimen/margin_15_dp"
        app:layout_constraintTop_toBottomOf="@+id/cardViewTopImage"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginBottom="@dimen/margin_10_dp"
            android:fontFamily="@font/muli_semi_bold"
            android:padding="@dimen/margin_0dp"
            android:text="Coll"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayoutLeftHeader"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:id="@+id/relLayUserProfileImage"
        android:layout_width="@dimen/margin_75dp"
        android:layout_height="@dimen/margin_75dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginBottom="@dimen/margin_20_dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/drawable_background_circle_shape"
        android:backgroundTint="@color/white">


        <ImageView
            android:id="@+id/imgViewUserProfile"
            android:layout_width="@dimen/margin_75dp"
            android:layout_height="@dimen/margin_75dp"
            android:layout_centerInParent="true"
             />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_10_dp"
        app:layout_constraintTop_toTopOf="@+id/relLayUserProfileImage"
        app:layout_constraintBottom_toBottomOf="@+id/relLayUserProfileImage"
        app:layout_constraintStart_toEndOf="@+id/relLayUserProfileImage">
        <TextView
            android:id="@+id/txtViewHeaderUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/margin_13sp"
            android:fontFamily="@font/muli_bold"
            android:textColor="@color/white"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textViewHeaderEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_12sp"
            android:ellipsize="end"
            android:fontFamily="@font/muli_bold"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_2dp"
            android:text="" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/txtViewContectUs"
            android:layout_width="@dimen/margin_25_dp"
            android:layout_height="@dimen/margin_25_dp"
            android:src="@mipmap/ic_one"
            android:gravity="center"
           />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_contact_us"
                android:textSize="@dimen/margin_14sp"
                android:textColor="@color/light_black"
                android:fontFamily="@font/muli_semi_bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_10_dp"/>

    </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/str_confirm_the_make_model_specification_and_budget_of_the_vehicle_you_re_after_and_any_specialrequirement_you_have"
    android:fontFamily="@font/muli_semi_bold"
    android:gravity="center"
    android:textSize="@dimen/margin_13dp"
    android:textColor="@color/description_color"
    android:layout_marginTop="@dimen/margin_10_dp"
    />
</LinearLayout>
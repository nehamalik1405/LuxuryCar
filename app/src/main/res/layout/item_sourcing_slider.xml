<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/txtViewContectUs"
            android:layout_width="@dimen/margin_30_dp"
            android:layout_height="@dimen/margin_30_dp"
            android:src="@mipmap/ic_one"
            android:gravity="center"
           />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact us"
                android:textSize="@dimen/margin_14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/muli_semi_bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_10_dp"/>

    </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Confirm the make,model,specification and budget of the vehicle you're after and any specialrequirement you have."
    android:fontFamily="@font/muli_semi_bold"
    android:gravity="center"
    android:textSize="@dimen/margin_13dp"
    android:textColor="@color/black"
    android:layout_marginTop="@dimen/margin_10_dp"
    />
</LinearLayout>
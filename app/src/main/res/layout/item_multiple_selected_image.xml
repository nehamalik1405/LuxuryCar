<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCarImage"
        android:layout_width="@dimen/margin_130_dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/margin_10_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgViewItemCar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_140_dp"
                android:scaleType="fitXY"
                android:src="@drawable/demo_image1"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/edtTextFirstName"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_35_dp"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:text="@string/str_first_picture"
        android:textColor="@color/light_black"
        android:background="@drawable/drawable_rounder_edit_text_background"
        style="@style/EditTextField"
        android:imeOptions="actionNext"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_5dp"
        android:paddingEnd="@dimen/margin_5dp"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/cardViewCarImage"
        app:layout_constraintStart_toStartOf="@+id/cardViewCarImage"
        app:layout_constraintEnd_toEndOf="@+id/cardViewCarImage"
        />


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".code_files.ui.seller_deshboard.fragment.SellerHomeFragment">

    <LinearLayout
        android:id="@+id/linLayoutTop"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10_dp"
            android:fontFamily="@font/muli_semi_bold"
            android:gravity="center"
            android:text="Seller Name Dashboard"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_15sp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImageSeller"
        android:layout_width="@dimen/margin_100_dp"
        android:layout_height="@dimen/margin_100_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_15_dp"
        app:cardCornerRadius="@dimen/margin_10_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linLayoutTop">

        <ImageView
            android:id="@+id/imgViewSellerCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_seller_card_image" />

    </androidx.cardview.widget.CardView>
  <LinearLayout
      android:layout_width="@dimen/margin_0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin_10_dp"
      app:layout_constraintTop_toTopOf="@+id/cardViewImageSeller"
      app:layout_constraintStart_toEndOf="@+id/cardViewImageSeller"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="@+id/cardViewImageSeller"
      android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_head_office"
        android:textAllCaps="true"
       style="@style/TextViewSubTitle"
        android:textSize="@dimen/margin_16sp"
        android:fontFamily="@font/muli_semi_bold"
        android:textColor="@color/text_color_grey"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_town_square_dubai"
        android:textSize="@dimen/margin_16sp"
        android:fontFamily="@font/muli_semi_bold"
        style="@style/TextViewSubTitle"
        android:textColor="@color/light_black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/str_91"
          android:textSize="@dimen/margin_16sp"
          style="@style/TextViewSubTitle"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/margin_5dp"
          android:textSize="@dimen/margin_16sp"
          android:text="@string/str_999_999_9999"
          style="@style/TextViewSubTitle"
          />
    </LinearLayout>


  </LinearLayout>

    <TextView
        android:id="@+id/txtViewForRentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSubTitle"
        android:textSize="@dimen/margin_16sp"
        android:fontFamily="@font/muli_semi_bold"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:text="@string/str_53"
        android:textColor="@color/light_black"
        app:layout_constraintTop_toBottomOf="@+id/cardViewImageSeller"
        app:layout_constraintStart_toStartOf="@+id/cardViewImageSeller"/>


    <TextView
        android:id="@+id/txtViewForRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSubTitle"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:text="@string/str_for_rent"
        android:textSize="@dimen/margin_16sp"
        android:fontFamily="@font/muli_semi_bold"
        android:textColor="@color/text_color_grey"
        app:layout_constraintTop_toBottomOf="@+id/cardViewImageSeller"
        app:layout_constraintStart_toEndOf="@+id/txtViewForRentValue"/>

    <TextView
        android:id="@+id/txtViewForSaleValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSubTitle"
        android:layout_marginStart="@dimen/margin_20_dp"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:text="@string/str_30"
        android:textColor="@color/light_black"
        android:textSize="@dimen/margin_16sp"
        android:fontFamily="@font/muli_semi_bold"
        app:layout_constraintTop_toBottomOf="@+id/cardViewImageSeller"
        app:layout_constraintStart_toEndOf="@+id/txtViewForRent"/>


    <TextView
        android:id="@+id/txtViewForSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSubTitle"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:text="@string/str_for_sale"
        android:textSize="@dimen/margin_16sp"
        android:fontFamily="@font/muli_semi_bold"
        android:textColor="@color/text_color_grey"
        app:layout_constraintTop_toBottomOf="@+id/cardViewImageSeller"
        app:layout_constraintStart_toEndOf="@+id/txtViewForSaleValue"/>

    <TextView
        android:id="@+id/txtViewLoremIpsumisSimplyDummyTextofPrintingInSellerHome"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        style="@style/TextViewSubTitle"
        android:textSize="@dimen/txt_size_15sp"
        android:fontFamily="@font/muli_semi_bold"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:text="@string/str_lorem_ipsum_is_simply_dummy_text_of_the_printing_and_type_industry_lorem_ipsum_has_been_the_industry_s_standards_dummy_text_ever_seen_the_1500s_whwn_an_unknown"
        android:textColor="@color/light_black"
        app:layout_constraintTop_toBottomOf="@+id/txtViewForRentValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

   <LinearLayout
       android:id="@+id/consLayoutForTab"
       android:layout_width="@dimen/margin_0dp"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="@dimen/margin_20_dp"
       android:layout_marginStart="@dimen/margin_10_dp"
       android:layout_marginEnd="@dimen/margin_10_dp"
       app:layout_constraintTop_toBottomOf="@id/txtViewLoremIpsumisSimplyDummyTextofPrintingInSellerHome"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/consLayoutTabForSale"
           android:layout_width="0dp"
           android:layout_height="@dimen/margin_50dp"
           android:layout_weight="1"
           android:background="@drawable/drawable_tab_background"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toStartOf="@+id/consLayoutTabForRent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/str_for_sale"
               android:fontFamily="@font/muli_bold"
               android:textColor="@color/black"
               android:textSize="@dimen/txt_size_14sp"
               android:layout_marginTop="@dimen/margin_10_dp"
               android:layout_marginBottom="@dimen/margin_10_dp"
               android:layout_marginStart="@dimen/margin_5dp"
               android:layout_marginEnd="@dimen/margin_5dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/consLayoutTabForRent"
           android:layout_width="0dp"
           android:layout_height="@dimen/margin_50dp"
           android:layout_weight="1"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toStartOf="@+id/consLayoutTabForBuyerEnqukles"
           app:layout_constraintStart_toEndOf="@+id/consLayoutTabForSale">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/title_for_rent"
               android:fontFamily="@font/muli_bold"
               android:textColor="@color/black"
               android:textSize="@dimen/txt_size_14sp"
               android:layout_marginTop="@dimen/margin_10_dp"
               android:layout_marginBottom="@dimen/margin_10_dp"
               android:layout_marginStart="@dimen/margin_5dp"
               android:layout_marginEnd="@dimen/margin_5dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/consLayoutTabForBuyerEnqukles"
           android:layout_width="0dp"
           android:layout_height="@dimen/margin_50dp"
           android:layout_weight="1.2"
           android:layout_marginEnd="@dimen/margin_10_dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toEndOf="@+id/consLayoutTabForRent"
           app:layout_constraintEnd_toStartOf="@+id/imgViewFilterList"
           app:layout_constraintBottom_toBottomOf="parent">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/str_buyer_enquiries"
               android:textSize="@dimen/txt_size_14sp"
               android:fontFamily="@font/muli_bold"
               android:textColor="@color/black"
               android:layout_marginTop="@dimen/margin_10_dp"
               android:layout_marginBottom="@dimen/margin_10_dp"
               android:layout_marginStart="@dimen/margin_5dp"
               android:layout_marginEnd="@dimen/margin_5dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>
       </androidx.constraintlayout.widget.ConstraintLayout>

       <ImageView
           android:id="@+id/imgViewFilterList"
           android:layout_width="@dimen/margin_25_dp"
           android:layout_height="@dimen/margin_25_dp"
           android:src="@drawable/ic_filter_list"
          android:layout_gravity="center_vertical"/>


   </LinearLayout>

    <View
        android:id="@+id/viewLineTabBootom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        app:layout_constraintTop_toBottomOf="@+id/consLayoutForTab"
        android:background="@color/green" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewForSale"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="@dimen/margin_0dp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/margin_10_dp"
        app:layout_constraintTop_toBottomOf="@+id/viewLineTabBootom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_20_dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewForRent"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="@dimen/margin_0dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_10_dp"
        app:layout_constraintTop_toBottomOf="@+id/viewLineTabBootom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_20_dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBuyerEnquiries"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="@dimen/margin_0dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_10_dp"
        app:layout_constraintTop_toBottomOf="@+id/viewLineTabBootom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_20_dp"/>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/conLayoutFabButton"
    android:layout_width="@dimen/margin_55_dp"
    android:layout_height="@dimen/margin_55_dp"
    android:layout_marginEnd="@dimen/margin_10_dp"
    android:layout_marginBottom="@dimen/margin_10_dp"
    android:background="@drawable/drawable_background_circle_shape"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <ImageView
        android:id="@+id/imgViewFabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
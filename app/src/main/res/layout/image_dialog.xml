    />
    <ImageView
        android:id="@+id/imgViewBack"
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="@dimen/margin_40dp"
        android:src="@drawable/ic_remove"
        android:layout_alignParentEnd="true"

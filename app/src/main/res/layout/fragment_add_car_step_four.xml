<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".code_files.ui.add_car.fragment.AddCarStepFour">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_20_dp">


    <TextView
    android:id="@+id/txtViewPaymentDetail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Payment Detail"
    android:textSize="@dimen/margin_17sp"
    android:textColor="@color/black"
    android:fontFamily="@font/muli_bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="@dimen/margin_10_dp"/>

    <TextView
        android:id="@+id/txtViewOderSummery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:text="Order Summary"
        android:textSize="@dimen/txt_size_15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/muli_bold"
        app:layout_constraintTop_toBottomOf="@+id/txtViewPaymentDetail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_10_dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consLayoutOrderSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:layout_marginEnd="@dimen/margin_10_dp"
            android:layout_marginTop="@dimen/margin_30_dp"
            android:paddingTop="@dimen/margin_20_dp"
            android:paddingBottom="@dimen/margin_20_dp"
            android:background="@drawable/drawable_rounder_edit_text_background"
            app:layout_constraintTop_toBottomOf="@+id/txtViewOderSummery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">



            <TextView
                android:id="@+id/txtViewPremiumFearture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Feature"
                android:textSize="@dimen/txt_size_15sp"
                style="@style/TextViewTitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_10_dp"

                />

            <TextView
                android:id="@+id/txtViewPremiumFearturePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AED 249.00"
                android:layout_marginEnd="@dimen/margin_10_dp"
                android:textSize="@dimen/txt_size_15sp"
                android:textColor="@color/sub_title_color"
                style="@style/TextViewTitle"
                app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/margin_10_dp"

                />
            <TextView
                android:id="@+id/txtViewVatPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VAT 5%"
                android:textSize="@dimen/txt_size_15sp"
                style="@style/TextViewTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtViewPremiumFearture"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_10_dp"
                android:layout_marginTop="@dimen/margin_10_dp"
                />
            <TextView
                android:id="@+id/txtViewtxtViewVatPercentagePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AED 12.45"
                android:layout_marginEnd="@dimen/margin_10_dp"
                android:textSize="@dimen/txt_size_15sp"
                android:textColor="@color/sub_title_color"
                style="@style/TextViewTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtViewPremiumFearturePrice"
               app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/margin_10_dp"
                android:layout_marginTop="@dimen/margin_10_dp"
                />

            <View
                android:id="@+id/viewLineVatPercentage"
                app:layout_constraintTop_toBottomOf="@+id/txtViewtxtViewVatPercentagePrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="@dimen/margin_1dp"
                android:background="@color/dash_color"
                android:layout_marginTop="@dimen/margin_20_dp"/>

            <TextView
                android:id="@+id/txtViewTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="@dimen/txt_size_15sp"
                style="@style/TextViewTitle"
                app:layout_constraintTop_toBottomOf="@+id/viewLineVatPercentage"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_10_dp"
                android:layout_marginTop="@dimen/margin_20_dp"
                />
            <TextView
                android:id="@+id/txtViewtxtViewTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AED 12.45"
                android:layout_marginEnd="@dimen/margin_10_dp"
                android:textSize="@dimen/txt_size_15sp"
                android:textColor="@color/sub_title_color"
                style="@style/TextViewTitle"
                app:layout_constraintTop_toBottomOf="@+id/viewLineVatPercentage"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/margin_10_dp"
                android:layout_marginTop="@dimen/margin_20_dp"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/txtViewSPaymentDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S Payment Detail"
        android:textSize="@dimen/margin_17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/muli_bold"
        app:layout_constraintTop_toBottomOf="@+id/consLayoutOrderSummary"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginStart="@dimen/margin_10_dp"/>

    <TextView
        android:id="@+id/txtViewCardInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card information"
        android:textSize="@dimen/txt_size_12sp"
        android:textColor="@color/sub_title_color"
        android:fontFamily="@font/muli_bold"
        app:layout_constraintTop_toBottomOf="@+id/txtViewSPaymentDetail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:layout_marginStart="@dimen/margin_10_dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLayoutCardInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:paddingTop="@dimen/margin_10_dp"
        android:background="@drawable/drawable_rounder_edit_text_background"
        app:layout_constraintTop_toBottomOf="@+id/txtViewCardInformation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <TextView
            android:id="@+id/txtViewCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234 1234 1234 1234"
            android:textSize="@dimen/txt_size_12sp"
            android:fontFamily="@font/muli_bold"
            android:textColor="@color/sub_title_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_10_dp"

            />



        <View
            android:id="@+id/viewLineBelowCardNumber"
            app:layout_constraintTop_toBottomOf="@+id/txtViewCardNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="@dimen/margin_1dp"
            android:background="@color/dash_color"
            android:layout_marginTop="@dimen/margin_10_dp"/>

        <TextView
            android:id="@+id/txtViewMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MM/YY"
            android:textSize="@dimen/txt_size_12sp"
            android:fontFamily="@font/muli_bold"
            android:textColor="@color/sub_title_color"
            app:layout_constraintTop_toBottomOf="@+id/viewLineBelowCardNumber"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_10_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_10_dp"
            android:layout_marginTop="@dimen/margin_10_dp"

            />
        <View
            android:id="@+id/viewLinemiddle"
            app:layout_constraintTop_toBottomOf="@+id/viewLineBelowCardNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/margin_1dp"
            android:layout_height="@dimen/margin_0dp"
            android:background="@color/dash_color"
            />

        <TextView
            android:id="@+id/txtViewCvc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CVC"
            android:textSize="@dimen/txt_size_12sp"
            android:fontFamily="@font/muli_bold"
            android:textColor="@color/sub_title_color"
            app:layout_constraintTop_toBottomOf="@+id/viewLineBelowCardNumber"
            app:layout_constraintStart_toEndOf="@+id/viewLinemiddle"
            android:layout_marginStart="@dimen/margin_10_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_10_dp"
            android:layout_marginTop="@dimen/margin_10_dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPayAED"
        style="@style/buttonFieldStyle"
        android:backgroundTint="@color/yellow_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_45_dp"
        android:layout_marginTop="@dimen/margin_30_dp"
        android:textAllCaps="true"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:text="Pay AED 261.45"
        android:textColor="@color/black"
        android:fontFamily="@font/muli_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consLayoutCardInformation"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


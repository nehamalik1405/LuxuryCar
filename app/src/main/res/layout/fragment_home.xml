            android:layout_width="@dimen/margin_15dp"
            android:layout_height="@dimen/margin_25_dp"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:visibility="gone"
            android:src="@mipmap/ic_right_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtViewPromotedListing"
            app:layout_constraintBottom_toBottomOf="@+id/txtViewPromotedListing"
            />

        <androidx.recyclerview.widget.RecyclerView

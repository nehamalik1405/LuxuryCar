<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgViewYoutube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_utube"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgViewLinkedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_linkedin"
        android:layout_marginTop="@dimen/margin_15dp"
        app:layout_constraintTop_toBottomOf="@+id/imgViewYoutube"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgViewInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_instagram"
        android:layout_marginTop="@dimen/margin_15dp"
        app:layout_constraintTop_toBottomOf="@+id/imgViewLinkedIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgViewFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_instagram"
        android:layout_marginTop="@dimen/margin_15dp"
        app:layout_constraintTop_toBottomOf="@+id/imgViewInstagram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
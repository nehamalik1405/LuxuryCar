<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         android:layout_width="@dimen/margin_40dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10_dp"
        android:layout_marginStart="@dimen/margin_150_dp"
        android:background="@color/green"

        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgViewYouTube"
            android:layout_width="@dimen/margin_25_dp"
            android:layout_height="@dimen/margin_25_dp"
            android:src="@mipmap/ic_utube"
            android:layout_marginBottom="@dimen/margin_5dp"
            />
        <ImageView
            android:id="@+id/imgViewLinkedIn"
            android:layout_width="@dimen/margin_25_dp"
            android:layout_height="@dimen/margin_25_dp"
            android:src="@mipmap/ic_linkedin"
            android:layout_marginBottom="@dimen/margin_5dp"
            />
        <ImageView
            android:id="@+id/imgViewInstagram"
            android:layout_width="@dimen/margin_25_dp"
            android:layout_height="@dimen/margin_25_dp"
            android:src="@mipmap/ic_instagram"
            android:layout_marginBottom="@dimen/margin_5dp"
            />
        <ImageView
            android:id="@+id/imgViewFacebook"
            android:layout_width="@dimen/margin_25_dp"
            android:layout_height="@dimen/margin_25_dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_facebook_trans"/>



</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/margin_10_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".code_files.ui.home.fragment.SouringFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linLayoutTop"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:background="@color/green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sourcing"
                android:textSize="@dimen/txt_size_15sp"
                android:fontFamily="@font/muli_semi_bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10_dp"
                />

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCarImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_170_dp"
            app:layout_constraintTop_toBottomOf="@+id/linLayoutTop"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="@dimen/margin_5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_20_dp"
            >
            <ImageView
                android:id="@+id/imgViewBottomCar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_sourcing_car1"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnSourceMyCar"
            android:background="@drawable/drawable_button_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_20_dp"
            app:layout_constraintTop_toBottomOf="@+id/cardViewCarImage"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:layout_marginStart="@dimen/margin_15_dp"
                android:layout_marginEnd="@dimen/margin_15_dp"
                android:layout_marginBottom="@dimen/margin_10_dp"
                android:fontFamily="@font/muli_semi_bold"
                android:padding="@dimen/margin_0dp"
                android:text="Source My Car"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txtViewHowdoesitwork"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSourceMyCar"
            android:text="How does it work?"
            android:fontFamily="@font/muli_bold"
            android:textSize="@dimen/margin_20_dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_20_dp"/>



            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpagerSourcingDataSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txtViewHowdoesitwork"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/margin_15_dp"
                android:layout_marginEnd="@dimen/margin_15_dp"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:layout_marginBottom="@dimen/margin_20_dp"
                />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_20_dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|center"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginEnd="@dimen/margin_15_dp"
            app:tabSelectedTextColor="@android:color/transparent"
            app:tabTextColor="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/viewpagerSourcingDataSteps"
            app:layout_constraintStart_toStartOf="@+id/viewpagerSourcingDataSteps"
            app:layout_constraintEnd_toEndOf="@+id/viewpagerSourcingDataSteps"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCarImage2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_170_dp"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="@dimen/margin_5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_20_dp"
            >
            <ImageView
                android:id="@+id/imgViewBottomCar2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_sourcing_car2"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtViewWhatIsCarSourcing"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:text="What is car sourcing?"
            android:textSize="@dimen/txt_size_15sp"
            android:textColor="@color/light_black"
            android:fontFamily="@font/muli_semi_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewCarImage2"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_20_dp"/>

        <TextView
            android:id="@+id/txtViewPutSimplyCarsourcingIsYou"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:text="@string/str_put_simply_car_sourcing_is_you_the_buyer_commissioning_us_the_seller_to_locate_prepare_and_supply_you_next_luxury_car"
            android:textSize="@dimen/margin_12_dp"
            android:textColor="@color/description_color"
            android:fontFamily="@font/muli_semi_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtViewWhatIsCarSourcing"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_15_dp"/>


        <TextView
            android:id="@+id/txtViewWhyShouldLuxurycarmarket"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:text="Why should luxurycarmarket.ae source my next car?"
            android:textSize="@dimen/txt_size_15sp"
            android:textColor="@color/light_black"
            android:fontFamily="@font/muli_semi_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtViewPutSimplyCarsourcingIsYou"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_20_dp"/>

        <TextView
            android:id="@+id/txtViewOurProfessionalCarSorcingService"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:text="Our professional car sorcing service is becoming increasingly popular by the montth. This is because it conveniently shifts the responsibility of finding your next lusury car away from you and family into the hand sof us, the experts,"
            android:textSize="@dimen/margin_12_dp"
            android:textColor="@color/description_color"
            android:fontFamily="@font/muli_semi_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtViewWhyShouldLuxurycarmarket"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_15_dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnSourceMyCar2"
            android:background="@drawable/drawable_button_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_20_dp"
            app:layout_constraintTop_toBottomOf="@+id/txtViewOurProfessionalCarSorcingService"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:layout_marginStart="@dimen/margin_15_dp"
                android:layout_marginEnd="@dimen/margin_15_dp"
                android:layout_marginBottom="@dimen/margin_10_dp"
                android:fontFamily="@font/muli_semi_bold"
                android:padding="@dimen/margin_0dp"
                android:text="Source My Car"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSourceList"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSourceMyCar2"
            android:layout_marginTop="@dimen/margin_15_dp"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginEnd="@dimen/margin_15_dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>
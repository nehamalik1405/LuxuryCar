<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".code_files.ui.home.fragment.AboutUsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_10_dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linLayoutTopAboutUs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/txtViewAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10_dp"
                android:fontFamily="@font/muli_semi_bold"
                android:gravity="center"
                android:text="About Us"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_15sp" />

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCarImageBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_170_dp"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/margin_8dp"
            app:layout_constraintTop_toBottomOf="@+id/linLayoutTopAboutUs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_20_dp"
            >
            <ImageView
                android:id="@+id/imgViewBannerCar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/txtViewDescriptionOne"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="@dimen/text_size_12_sp"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginEnd="@dimen/margin_10_dp"
            android:textColor="@color/light_black"
            android:fontFamily="@font/muli_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/cardViewCarImageBanner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCarImageBanner2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_170_dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/txtViewDescriptionOne"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="@dimen/margin_5dp"
            app:cardBackgroundColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_5dp"
            >
            <ImageView
                android:id="@+id/imgViewBanner2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="fitCenter"/>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linLayoutHeading"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="@dimen/margin_65_dp"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:scrollbars="vertical"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/margin_15_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewCarImageBanner2">
            <View
                android:id="@+id/viewLine"
                android:layout_width="@dimen/margin_4dp"
                android:layout_height="match_parent"
                android:background="@color/green"
                app:layout_constraintTop_toTopOf="@+id/txtViewHeading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/txtViewHeading"
                />

            <TextView
                android:id="@+id/txtViewHeading"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10_dp"
                android:textSize="@dimen/txt_size_15sp"
                android:textColor="@color/light_black"
                android:text=""
                android:fontFamily="@font/muli_semi_bold"
                app:layout_constraintStart_toEndOf="@+id/viewLine"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCarImageBanner3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_170_dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/linLayoutHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="@dimen/margin_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:layout_marginEnd="@dimen/margin_15_dp"
            android:layout_marginTop="@dimen/margin_20_dp">
            <ImageView
                android:id="@+id/imgViewBanner3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/margin_2dp"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>






    <!--<TextView
        android:id="@+id/txtViewHowTheAdventureEndedSecondSUbHeading"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_14sp"
        android:fontFamily="@font/muli_bold"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:text="How the adventure ended will be seen anon, aouda was anxious, though she sold nothing. As for Passepartout, he thought Mr. fogg's manoeuvre simply glorious."
        app:layout_constraintTop_toBottomOf="@+id/cardViewAboutUsCarImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>-->




</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:theme="@style/CircularProgress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
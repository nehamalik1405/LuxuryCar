<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/margin_10_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".code_files.ui.home.fragment.AboutUsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linLayoutTopAboutUs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/txtViewAboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10_dp"
            android:fontFamily="@font/muli_semi_bold"
            android:gravity="center"
            android:text="About Us"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtViewHowTheAdventureEnded"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_14sp"
        android:fontFamily="@font/muli_bold"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:text="How the adventure ended will be seen anon, aouda was anxious, though she sold nothing"
        app:layout_constraintTop_toBottomOf="@+id/linLayoutTopAboutUs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAboutUsCarImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_180_dp"
        app:layout_constraintTop_toBottomOf="@+id/txtViewHowTheAdventureEnded"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/margin_5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:layout_marginTop="@dimen/margin_20_dp"
        >
        <ImageView
            android:id="@+id/imgViewBottomCar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_about_us_car"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtViewHowTheAdventureEndedSecondSUbHeading"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_14sp"
        android:fontFamily="@font/muli_bold"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:text="How the adventure ended will be seen anon, aouda was anxious, though she sold nothing. As for Passepartout, he thought Mr. fogg's manoeuvre simply glorious."
        app:layout_constraintTop_toBottomOf="@+id/cardViewAboutUsCarImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtViewDescriptionOne"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12_sp"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:textColor="@color/light_black"
        android:fontFamily="@font/muli_semi_bold"
        android:text="As for Passepartout, he thought Mr. Fogg’s manoeuvre simply glorious. The captain had said “between eleven and twelve knots,” and the Henrietta confirmed his prediction. How the adventure ended will be seen anon. Aouda was anxious, though she said nothing. As for Passepartout, he thought Mr. Fogg’s manoeuvre simply glorious. The captain had said."
        app:layout_constraintTop_toBottomOf="@+id/txtViewHowTheAdventureEndedSecondSUbHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtViewDescriptionTwo"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12_sp"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:textColor="@color/light_black"
        android:fontFamily="@font/muli_semi_bold"
        android:text="As for Passepartout, he thought Mr. Fogg’s manoeuvre simply glorious. The captain had said “between eleven and twelve knots,” and the Henrietta confirmed his prediction. How the adventure ended will be seen anon. Aouda was anxious, though she said nothing. As for Passepartout, he thought Mr. Fogg’s manoeuvre simply glorious. The captain had said."
        app:layout_constraintTop_toBottomOf="@+id/txtViewDescriptionOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtViewHowTheAdventureEndedBottomSUbHeading"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_14sp"
        android:fontFamily="@font/muli_bold"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginStart="@dimen/margin_10_dp"
        android:layout_marginEnd="@dimen/margin_10_dp"
        android:text="During the first days, they went along smoothly enough. The sea was not very unpropitious, the wind seemed stationary in the north-east."
        app:layout_constraintTop_toBottomOf="@+id/txtViewDescriptionTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
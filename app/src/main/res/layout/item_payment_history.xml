<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_marginTop="@dimen/margin_10_dp"
    android:layout_marginEnd="@dimen/margin_10_dp"
    android:layout_marginStart="@dimen/margin_10_dp"

    app:cardCornerRadius="@dimen/margin_8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:padding="@dimen/margin_20_dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtViewPayment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#1"
            style="@style/TextViewTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/txtViewPaymentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03-05-2022"
            android:textColor="@color/title_color"
            style="@style/TextViewTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ImageView
            android:id="@+id/imgViewDateCalender"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_0dp"
            android:src="@mipmap/ic_calendar"
            android:layout_marginEnd="@dimen/margin_10_dp"
            app:layout_constraintTop_toTopOf="@+id/txtViewPaymentDate"
            app:layout_constraintBottom_toBottomOf="@+id/txtViewPaymentDate"
            app:layout_constraintEnd_toStartOf="@+id/txtViewPaymentDate"/>

            <TextView
                android:id="@+id/txtViewChevroletCamarow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_chevrolet_camaroerui"
                android:layout_marginTop="@dimen/margin_10_dp"
                style="@style/TextViewTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtViewPayment1"
                />

            <TextView
                android:id="@+id/txtViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_aed_168_000"
                android:layout_marginTop="@dimen/margin_5dp"
                android:textColor="@color/green"
                style="@style/TextViewTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtViewChevroletCamarow"
                app:layout_constraintStart_toStartOf="parent"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
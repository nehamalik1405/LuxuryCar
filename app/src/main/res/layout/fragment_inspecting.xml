                android:layout_marginStart="@dimen/margin_25_dp"
                android:layout_marginTop="@dimen/margin_30_dp"
                android:layout_marginEnd="@dimen/margin_25_dp"
                app:layout_constraintStart_toStartOf="@+id/imgViewBackground"
                app:layout_constraintTop_toBottomOf="@+id/recylerViewInspecting"
                app:layout_constraintEnd_toEndOf="@+id/consLayoutBackground"
                >


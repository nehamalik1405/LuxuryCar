    tools:context=".code_files.ui.home.fragment.InspectingFragment">

    <LinearLayout
        android:id="@+id/linLayoutTop"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_inspecting"
            android:textSize="@dimen/txt_size_15sp"
            android:fontFamily="@font/muli_semi_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10_dp"
            />

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/cardViewForBackGroundImage"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="@dimen/margin_0dp"
        android:layout_marginStart="@dimen/margin_15_dp"
        android:layout_marginEnd="@dimen/margin_15_dp"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginBottom="@dimen/margin_20_dp"
        app:cardCornerRadius="@dimen/margin_5dp"
        app:layout_constraintTop_toBottomOf="@+id/linLayoutTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consLayoutBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >
            <ImageView
                android:id="@+id/imgViewBackground"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="@dimen/margin_0dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerViewInspecting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/imgViewBackground"
                app:layout_constraintTop_toTopOf="@+id/imgViewBackground"
                android:layout_marginTop="@dimen/margin_30_dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                />


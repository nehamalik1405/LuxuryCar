                    android:textSize="@dimen/margin_14sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:fontFamily="@font/muli_semi_bold"
                    style="@style/buttonFieldStyle"
                    android:backgroundTint="@color/yellow_color"
                    android:layout_marginTop="@dimen/margin_0dp"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:layout_weight="3"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBookNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_book_now"
                    android:textSize="@dimen/margin_14sp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/muli_semi_bold"
                    style="@style/buttonFieldStyle"
                    android:layout_marginTop="@dimen/margin_0dp"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_weight="3"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_view_sample_report"
                app:layout_constraintStart_toStartOf="@+id/consLayoutBackground"
                app:layout_constraintTop_toBottomOf="@+id/linLayoutEnuireNBookNow"
                app:layout_constraintEnd_toEndOf="@+id/consLayoutBackground"
                android:layout_marginTop="@dimen/margin_15dp"
                android:textSize="@dimen/margin_15dp"
                android:fontFamily="@font/muli_semi_bold"
                android:textColor="@color/white"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:theme="@style/CircularProgress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
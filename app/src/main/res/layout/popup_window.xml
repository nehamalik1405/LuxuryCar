<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:id="@+id/popupLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_10_dp"
        android:background="@color/green"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewYoutube"
            android:layout_width="@dimen/margin_20_dp"
            android:layout_height="@dimen/margin_20_dp"
            android:src="@mipmap/ic_utube"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewLinkedIn"
            android:layout_width="@dimen/margin_20_dp"
            android:layout_height="@dimen/margin_20_dp"
            android:src="@mipmap/ic_linkedin"
            android:layout_marginTop="@dimen/margin_5dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewInstagram"
            android:layout_width="@dimen/margin_20_dp"
            android:layout_height="@dimen/margin_20_dp"
            android:src="@mipmap/ic_instagram"
            android:layout_marginTop="@dimen/margin_5dp"

            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewFacebook"
            android:layout_width="@dimen/margin_20_dp"
            android:layout_height="@dimen/margin_20_dp"
            android:src="@mipmap/ic_facebook_trans"
            android:layout_marginTop="@dimen/margin_5dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/margin_10_dp"
        android:layout_height="@dimen/margin_10_dp"
        android:background="@drawable/drawable_trangle_background"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/margin_0dp"
         />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".code_files.ui.add_car.fragment.AddCarStepThreeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_15dp"
        android:paddingEnd="@dimen/margin_15dp"
        android:paddingBottom="@dimen/margin_15dp">

        <TextView
            android:id="@+id/txtViewSelectTheBundleIsRightForYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_select_the_bundle_is_right_for_you"
            style="@style/AddCarTextViewHeadingTitle"
            android:layout_marginTop="@dimen/margin_0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSelectedPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/txtViewSelectTheBundleIsRightForYou"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



        <TextView
            android:id="@+id/txtViewPleaseNoteAllPriceAboveAreExclusiveOfVAT."
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/light_black"
            android:textSize="@dimen/txt_size_15sp"
            android:fontFamily="@font/muli_semi_bold"
            android:text="@string/str_please_note_all_prices_are_exclusive_of_vat"
            android:layout_marginTop="@dimen/margin_20_dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewSelectedPlan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ProgressBar
            android:id="@+id/progressBarForAddCarStepThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>
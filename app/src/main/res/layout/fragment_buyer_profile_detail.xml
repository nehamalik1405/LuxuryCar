<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_10_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".code_files.ui.home.fragment.BuyerProfileDetailFragment">

    <TextView
        android:id="@+id/txtViewMyProfile"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="@dimen/margin_20_dp"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:fontFamily="@font/muli_bold"
        style="@style/TextViewHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:text="Name"
        android:textColor="@color/light_black"
        style="@style/TextViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtViewMyProfile"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtViewShowUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Robert"
        android:textColor="@color/text_hint"
        style="@style/TextViewTitle"
        app:layout_constraintTop_toTopOf="@+id/txtViewName"
        app:layout_constraintBottom_toBottomOf="@+id/txtViewName"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtViewSurName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SurName"
        android:textColor="@color/light_black"
        android:layout_marginTop="@dimen/margin_10_dp"
        style="@style/TextViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtViewName"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtViewShowUserSurName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pattinson"
        android:textColor="@color/text_hint"
        style="@style/TextViewTitle"
        app:layout_constraintTop_toTopOf="@+id/txtViewSurName"
        app:layout_constraintBottom_toBottomOf="@+id/txtViewSurName"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtViewMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:text="Mobile No."
        android:textColor="@color/light_black"
        style="@style/TextViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtViewSurName"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtViewShowUserMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_999_999_9999"
        android:textColor="@color/text_hint"
        style="@style/TextViewTitle"
        app:layout_constraintTop_toTopOf="@+id/txtViewMobileNumber"
        app:layout_constraintBottom_toBottomOf="@+id/txtViewMobileNumber"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtViewEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:text="Email Address"
        android:textColor="@color/light_black"
        style="@style/TextViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtViewMobileNumber"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtViewShowUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="robertpattinson@gmail.com"
        android:textColor="@color/text_hint"
        style="@style/TextViewTitle"
        app:layout_constraintTop_toTopOf="@+id/txtViewEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/txtViewEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
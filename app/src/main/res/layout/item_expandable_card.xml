<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewExpandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/margin_10_dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_15_dp"
        android:layout_marginEnd="@dimen/margin_15_dp"
        android:layout_marginTop="@dimen/margin_10_dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_15_dp"
            android:background="#92D6E5DE">
            <TextView
                android:id="@+id/textViewQuestion"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                tools:text="@string/str_how_much_does_it_cost_to_ship_a_car"
                android:textSize="@dimen/margin_14sp"
                android:fontFamily="@font/muli_semi_bold"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/margin_15_dp"
                android:layout_marginTop="@dimen/margin_15_dp"
                android:layout_marginBottom="@dimen/margin_10_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgViewDropDown"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/imgViewDropDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_down_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewQuestion"
                android:layout_marginEnd="@dimen/margin_15_dp"
                app:layout_constraintBottom_toBottomOf="@+id/textViewQuestion"
                app:tint="@color/green" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtViewExpandable"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_the_cost_will_be_based_on_a_couple_of_things_pickup_and_delivery_location_distance_open_or_enclosed_type_of_vehicle_and_vehicle_s_conditions"
        app:layout_constraintTop_toBottomOf="@+id/cardViewExpandable"
        app:layout_constraintStart_toStartOf="@+id/cardViewExpandable"
        app:layout_constraintEnd_toEndOf="@+id/cardViewExpandable"
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/description_color"
        android:fontFamily="@font/muli_semi_bold"
        android:visibility="gone"
        android:layout_marginStart="@dimen/margin_15_dp"
        android:layout_marginEnd="@dimen/margin_15_dp"
        android:layout_marginTop="@dimen/margin_10_dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
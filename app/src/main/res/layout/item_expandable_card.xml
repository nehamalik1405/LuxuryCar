<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewExpandable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45_dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/margin_10_dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_15_dp"
        android:layout_marginEnd="@dimen/margin_15_dp"
        android:layout_marginTop="@dimen/margin_10_dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D6E5DE">
            <TextView
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                android:text="How much does it cost to ship a car?"
                android:textSize="@dimen/margin_14sp"
                android:fontFamily="@font/muli_semi_bold"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/margin_15_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgViewDropDown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/imgViewDropDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_down_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/margin_15_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/green" />
        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtViewExpandable"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:text="The cost will be based on a couple of things;pickup and delivery location,distance,open or enclosed type of vehicle and vehicle's conditions."
        app:layout_constraintTop_toBottomOf="@+id/cardViewExpandable"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/black"
        android:fontFamily="@font/muli_semi_bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_15_dp"
        android:layout_marginEnd="@dimen/margin_15_dp"
        android:layout_marginTop="@dimen/margin_10_dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
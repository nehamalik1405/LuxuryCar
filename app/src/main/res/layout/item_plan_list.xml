<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cardViewBasicPlan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_20_dp"
    app:cardCornerRadius="@dimen/margin_10_dp"
    app:layout_constraintTop_toBottomOf="@+id/txtViewSelectTheBundleIsRightForYou"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLayoutBasicPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_color"
        android:paddingBottom="@dimen/margin_30_dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consLayoutBasicCurve"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_arc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/txtViewBasic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_basic"
                style="@style/TextViewHeading"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginBottom="@dimen/margin_15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consLayoutFree"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_background_black"
            android:layout_marginTop="@dimen/margin_20_dp"
            app:layout_constraintTop_toBottomOf="@+id/consLayoutBasicCurve"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_free"
                style="@style/TextViewHeading"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:layout_marginBottom="@dimen/margin_10_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txtViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_35_dp"
            android:layout_marginEnd="@dimen/margin_35_dp"
            android:textColor="@color/description_color"
            app:layout_constraintTop_toBottomOf="@+id/consLayoutFree"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSelectPlan"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="@dimen/margin_55_dp"
            android:text="@string/title_select_basic"
            android:textSize="@dimen/txt_size_15sp"
            android:layout_marginStart="@dimen/margin_35_dp"
            android:layout_marginEnd="@dimen/margin_35_dp"
            style="@style/TextViewSubTitle"
            android:background="@drawable/drawable_background_border"
            android:layout_marginTop="@dimen/margin_20_dp"
            app:layout_constraintTop_toBottomOf="@+id/txtViewContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".code_files.ui.home.fragment.FollowUsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topConsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


    <LinearLayout
        android:id="@+id/linLayoutTop"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_inspecting"
            android:textSize="@dimen/txt_size_15sp"
            android:fontFamily="@font/muli_semi_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10_dp"
            />

    </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewInspectig"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0dp"
                app:layout_constraintTop_toBottomOf="@+id/linLayoutTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/margin_15_dp"
                android:layout_marginEnd="@dimen/margin_15_dp"
                android:layout_marginTop="@dimen/margin_20_dp"
                android:layout_marginBottom="@dimen/margin_20_dp"
                app:cardCornerRadius="@dimen/margin_5dp"
               >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consLayoutBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:id="@+id/imgViewBackground"
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="@dimen/margin_0dp"
                        android:src="@mipmap/ic_inspecting_background"
                        android:scaleType="fitXY"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <LinearLayout
                        android:id="@+id/linLayoutPhysicalInspection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_30_dp"
                        app:layout_constraintStart_toStartOf="@+id/imgViewBackground"
                        app:layout_constraintTop_toTopOf="@+id/imgViewBackground">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/margin_25_dp"
                            android:layout_height="@dimen/margin_25_dp"
                            android:src="@mipmap/ic_right"
                            android:layout_marginStart="@dimen/margin_25_dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_physical_inspection"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/margin_13sp"
                            android:fontFamily="@font/muli_semi_bold"
                            android:layout_marginStart="@dimen/margin_10_dp"
                            android:layout_marginEnd="@dimen/margin_25_dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linLayout360DegreeVehicleChecks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_10_dp"
                        app:layout_constraintStart_toStartOf="@+id/imgViewBackground"
                        app:layout_constraintTop_toBottomOf="@+id/linLayoutPhysicalInspection">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/margin_25_dp"
                            android:layout_height="@dimen/margin_25_dp"
                            android:src="@mipmap/ic_right"
                            android:layout_marginStart="@dimen/margin_25_dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str__360_degree_vehicle_checks"
                            android:textColor="@color/white"
                            android:fontFamily="@font/muli_semi_bold"
                            android:textSize="@dimen/margin_13sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/margin_10_dp"
                            android:layout_marginEnd="@dimen/margin_25_dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linLayoutConsprehensiveComputerDiagnotics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_10_dp"
                        app:layout_constraintStart_toStartOf="@+id/imgViewBackground"
                        app:layout_constraintTop_toBottomOf="@+id/linLayout360DegreeVehicleChecks">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/margin_25_dp"
                            android:layout_height="@dimen/margin_25_dp"
                            android:src="@mipmap/ic_right"
                            android:layout_marginStart="@dimen/margin_25_dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_comprehensive_computer_diagnostics"
                            android:textColor="@color/white"
                            android:fontFamily="@font/muli_semi_bold"
                            android:textSize="@dimen/margin_13sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/margin_10_dp"
                            android:layout_marginEnd="@dimen/margin_25_dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linLayoutDigitalVehicleReports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_10_dp"
                        app:layout_constraintStart_toStartOf="@+id/imgViewBackground"
                        app:layout_constraintTop_toBottomOf="@+id/linLayoutConsprehensiveComputerDiagnotics">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/margin_25_dp"
                            android:layout_height="@dimen/margin_25_dp"
                            android:src="@mipmap/ic_right"
                            android:layout_marginStart="@dimen/margin_25_dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_digital_vehicle_reports"
                            android:textColor="@color/white"
                            android:fontFamily="@font/muli_semi_bold"
                            android:textSize="@dimen/margin_13sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/margin_10_dp"
                            android:layout_marginEnd="@dimen/margin_25_dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linLayoutEnuireNBookNow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/margin_25_dp"
                        android:layout_marginTop="@dimen/margin_30_dp"
                        android:layout_marginEnd="@dimen/margin_25_dp"
                        app:layout_constraintStart_toStartOf="@+id/imgViewBackground"
                        app:layout_constraintTop_toBottomOf="@+id/linLayoutDigitalVehicleReports"
                        app:layout_constraintEnd_toEndOf="@+id/consLayoutBackground"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnEnquire"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/str_enquire"
                            android:textSize="@dimen/margin_14sp"
                            android:textColor="@color/black"
                            android:textAllCaps="true"
                            android:fontFamily="@font/muli_bold"
                            style="@style/buttonFieldStyle"
                            android:backgroundTint="@color/yellow_color"
                            android:layout_marginTop="@dimen/margin_0dp"
                            android:layout_marginEnd="@dimen/margin_5dp"
                            android:layout_weight="3"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnBookNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/str_book_now"
                            android:textSize="@dimen/margin_14sp"
                            android:textAllCaps="true"
                            android:fontFamily="@font/muli_bold"
                            style="@style/buttonFieldStyle"
                            android:layout_marginTop="@dimen/margin_0dp"
                            android:layout_marginStart="@dimen/margin_5dp"
                            android:layout_weight="3"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_view_sample_report"
                        app:layout_constraintStart_toStartOf="@+id/consLayoutBackground"
                        app:layout_constraintTop_toBottomOf="@+id/linLayoutEnuireNBookNow"
                        app:layout_constraintEnd_toEndOf="@+id/consLayoutBackground"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:textSize="@dimen/margin_14sp"
                        android:fontFamily="@font/muli_semi_bold"
                        android:textColor="@color/white"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>





    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout android:id="@+id/popupLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_30_dp"
        android:layout_marginEnd="@dimen/margin_35_dp"
        app:layout_constraintEnd_toEndOf="@+id/topConsLayout"
        app:layout_constraintBottom_toTopOf="@+id/tringleArrow"
        android:padding="@dimen/margin_15_dp"
        android:background="@color/green"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewYoutube"
            android:layout_width="@dimen/margin_25_dp"
            android:layout_height="@dimen/margin_25_dp"
            android:src="@mipmap/ic_utube"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewLinkedIn"
            android:layout_width="@dimen/margin_25_dp"
            android:layout_height="@dimen/margin_25_dp"
            android:src="@mipmap/ic_linkedin"
            android:layout_marginTop="@dimen/margin_5dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewInstagram"
            android:layout_width="@dimen/margin_25_dp"
            android:layout_height="@dimen/margin_25_dp"
            android:src="@mipmap/ic_instagram"
            android:layout_marginTop="@dimen/margin_5dp"

            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewFacebook"
            android:layout_width="@dimen/margin_25_dp"
            android:layout_height="@dimen/margin_25_dp"
            android:src="@mipmap/ic_facebook_trans"
            android:layout_marginTop="@dimen/margin_5dp"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/tringleArrow"
        android:layout_width="@dimen/margin_10_dp"
        android:layout_height="@dimen/margin_10_dp"
        android:background="@drawable/drawable_trangle_background"
        android:padding="@dimen/margin_0dp"
        app:layout_constraintStart_toStartOf="@+id/popupLayout"
        app:layout_constraintEnd_toEndOf="@+id/popupLayout"
        app:layout_constraintBottom_toBottomOf="@+id/topConsLayout"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
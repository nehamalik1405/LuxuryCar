<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".code_files.ui.home.fragment.GarageDetailsFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/rootGarageDetailsPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linLayoutTop"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                android:background="@color/green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtViewGarageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10_dp"
                    android:fontFamily="@font/muli_semi_bold"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_15sp" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewImageSeller"
                android:layout_width="@dimen/margin_120_dp"
                android:layout_height="@dimen/margin_120_dp"
                android:layout_marginStart="@dimen/margin_10_dp"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:layout_marginEnd="@dimen/margin_15_dp"
                app:cardCornerRadius="@dimen/margin_10_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linLayoutTop">

                <ImageView
                    android:id="@+id/imgViewSellerCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                     />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10_dp"
                android:layout_marginEnd="@dimen/margin_10_dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardViewImageSeller"
                app:layout_constraintTop_toTopOf="@+id/cardViewImageSeller"
                app:layout_constraintBottom_toBottomOf="@+id/cardViewImageSeller">

                <TextView
                    style="@style/TextViewSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:text="@string/str_head_office"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/txt_size_15sp" />

                <TextView
                    android:id="@+id/txtViewCityName"
                    style="@style/TextViewSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtViewDialCode"
                        style="@style/TextViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/muli_semi_bold"
                        android:textSize="@dimen/margin_14sp" />

                    <TextView
                        android:id="@+id/txtViewPhoneNumber"
                        style="@style/TextViewSubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:text=""
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/muli_semi_bold"
                        android:textSize="@dimen/margin_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/consLayoutEmailAndCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_10_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewImageSeller">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btnEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:background="@drawable/drawable_button_background"

                        >

                        <ImageView
                            android:id="@+id/imgViewEmail"
                            android:layout_width="@dimen/margin_15dp"
                            android:layout_height="@dimen/margin_0dp"
                            android:src="@mipmap/ic_message"
                            app:layout_constraintBottom_toBottomOf="@+id/txtViewEmail"
                            app:layout_constraintEnd_toStartOf="@+id/txtViewEmail"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/txtViewEmail" />

                        <TextView
                            android:id="@+id/txtViewEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginEnd="@dimen/margin_10_dp"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:fontFamily="@font/muli_semi_bold"
                            android:padding="@dimen/margin_0dp"
                            android:text="Email"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imgViewEmail"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btnCall"
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                       android:layout_gravity="center_horizontal"
                        android:background="@drawable/drawable_call_button_background"
                        >

                        <ImageView
                            android:id="@+id/imgViewCall"
                            android:layout_width="@dimen/margin_15dp"
                            android:layout_height="@dimen/margin_0dp"
                            android:layout_marginStart="@dimen/margin_10_dp"
                            android:src="@mipmap/ic_call"
                            app:tint="@color/green"
                            app:layout_constraintBottom_toBottomOf="@+id/txtViewCall"
                            app:layout_constraintEnd_toStartOf="@+id/txtViewCall"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/txtViewCall" />

                        <TextView
                            android:id="@+id/txtViewCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginEnd="@dimen/margin_10_dp"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:fontFamily="@font/muli_semi_bold"
                            android:padding="@dimen/margin_0dp"
                            android:text="@string/str_call"
                            android:textColor="@color/green"
                            android:textSize="@dimen/txt_size_15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imgViewCall"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/txtViewForRentValue"
                style="@style/TextViewSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_semi_bold"
                android:text=""
                android:textColor="@color/green"
                android:textSize="@dimen/margin_14sp"
                android:layout_marginTop="@dimen/margin_10_dp"
                app:layout_constraintStart_toStartOf="@+id/cardViewImageSeller"
                app:layout_constraintTop_toBottomOf="@+id/cardViewImageSeller" />


            <TextView
                android:id="@+id/txtViewForRent"
                style="@style/TextViewSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:fontFamily="@font/muli_semi_bold"
                android:text="@string/str_for_rent"
                android:textColor="@color/text_color_grey"
                android:textSize="@dimen/margin_14sp"
                android:layout_marginTop="@dimen/margin_10_dp"
                app:layout_constraintStart_toEndOf="@+id/txtViewForRentValue"
                app:layout_constraintTop_toBottomOf="@+id/cardViewImageSeller"/>

            <TextView
                android:id="@+id/txtViewForSaleValue"
                style="@style/TextViewSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15dp"
                android:fontFamily="@font/muli_semi_bold"
                android:text=""
                android:textColor="@color/green"
                android:textSize="@dimen/margin_14sp"
               android:layout_marginTop="@dimen/margin_10_dp"
                app:layout_constraintStart_toEndOf="@+id/txtViewForRent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewImageSeller" />


            <TextView
                android:id="@+id/txtViewForSale"
                style="@style/TextViewSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:fontFamily="@font/muli_semi_bold"
                android:text="@string/str_for_sale"
                android:textColor="@color/text_color_grey"
                android:textSize="@dimen/margin_14sp"
                android:layout_marginTop="@dimen/margin_10_dp"
                app:layout_constraintStart_toEndOf="@+id/txtViewForSaleValue"
                app:layout_constraintTop_toBottomOf="@+id/cardViewImageSeller" />

            <TextView
                android:id="@+id/txtViewLoremIpsumisSimplyDummyTextofPrintingInSellerHome"
                style="@style/TextViewSubTitle"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10_dp"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:layout_marginEnd="@dimen/margin_10_dp"
                android:fontFamily="@font/muli_semi_bold"
                android:text=""
                android:textColor="@color/light_black"
                android:textSize="@dimen/txt_size_15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtViewForRentValue" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/consLayoutForTab"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_20_dp"
                android:layout_marginStart="@dimen/margin_10_dp"
                android:layout_marginEnd="@dimen/margin_10_dp"
                app:layout_constraintTop_toBottomOf="@id/txtViewLoremIpsumisSimplyDummyTextofPrintingInSellerHome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consLayoutTabForSale"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/consLayoutTabForRent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_for_sale"
                        android:fontFamily="@font/muli_semi_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_14sp"
                        android:layout_marginTop="@dimen/margin_10_dp"
                        android:layout_marginBottom="@dimen/margin_5dp"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:layout_marginEnd="@dimen/margin_15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/viewLineForSale"
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="@dimen/margin_3dp"
                    android:background="@color/yellow_color"
                    app:layout_constraintEnd_toEndOf="@+id/consLayoutTabForSale"
                    app:layout_constraintStart_toStartOf="@+id/consLayoutTabForSale"
                    app:layout_constraintTop_toBottomOf="@+id/consLayoutTabForSale" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consLayoutTabForRent"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/consLayoutTabForSale">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_for_rent"
                        android:fontFamily="@font/muli_semi_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_14sp"
                        android:layout_marginTop="@dimen/margin_10_dp"
                        android:layout_marginBottom="@dimen/margin_5dp"
                        android:layout_marginStart="@dimen/margin_15dp"
                        android:layout_marginEnd="@dimen/margin_15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/viewLineForRent"
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="@dimen/margin_3dp"
                    android:background="@color/green"
                    app:layout_constraintEnd_toEndOf="@+id/consLayoutTabForRent"
                    app:layout_constraintStart_toStartOf="@+id/consLayoutTabForRent"
                    app:layout_constraintTop_toBottomOf="@+id/consLayoutTabForRent" />

                <View
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_height="@dimen/margin_3dp"
                    android:background="@color/green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/viewLineForRent"
                    app:layout_constraintTop_toTopOf="@+id/viewLineForRent" />



            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAllList"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_20_dp"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/consLayoutForTab" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>


    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/green</item>
        <item name="android:textColor">#FF01F0</item>
        <item name="android:textSize">25sp</item>
    </style>-->


    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="NavigationView"  parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@color/black</item>
    </style>


    <style name="TextViewHeading" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginTop">@dimen/margin_10_dp</item>
        <item name="android:textSize">@dimen/margin_20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/muli_bold</item>

    </style>
    <style name="TextViewTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/margin_13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/muli_semi_bold</item>

    </style>
    <style name="TextViewSubTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/txt_size_15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/muli_bold</item>


    </style>
    <style name="EditTextField" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/txt_size_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/margin_5dp</item>
        <item name="background">@drawable/drawable_rounder_edit_text_background</item>


    </style>

    <style name="buttonFieldStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/drawable_button_background</item>
        <item name="android:layout_marginTop">@dimen/margin_20_dp</item>
        <item name="android:textSize">@dimen/txt_size_14sp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/white</item>
    </style>
    <style name="disableButtonFieldStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/disable_button_background</item>
        <item name="android:layout_marginTop">@dimen/margin_20_dp</item>
        <item name="android:textSize">@dimen/txt_size_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/white</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.a.luxurycar.code_files.ui.auth.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPassword"
            app:destination="@id/forgotPassword" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.a.luxurycar.code_files.ui.auth.fragment.BuyerRegister"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPassword"
        android:name="com.a.luxurycar.code_files.ui.auth.fragment.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotPassword_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_forgotPassword_to_otpVarificationFragment"
            app:destination="@id/otpVarificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/otpVarificationFragment"
        android:name="com.a.luxurycar.code_files.ui.auth.fragment.OtpVarificationFragment"
        android:label="fragment_otp_varification"
        tools:layout="@layout/fragment_otp_varification" >
        <action
            android:id="@+id/action_otpVarificationFragment_to_forgotPassword"
            app:destination="@id/forgotPassword" />
        <action
            android:id="@+id/action_otpVarificationFragment_to_updatePasswordFragment"
            app:destination="@id/updatePasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/updatePasswordFragment"
        android:name="com.a.luxurycar.code_files.ui.auth.fragment.UpdatePasswordFragment"
        android:label="fragment_update_password"
        tools:layout="@layout/fragment_update_password" >
        <action
            android:id="@+id/action_updatePasswordFragment_to_otpVarificationFragment"
            app:destination="@id/otpVarificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerBuyerAndSellerFragment"
        android:name="com.a.luxurycar.code_files.ui.auth.fragment.RegisterBuyerAndSellerFragment"
        android:label="fragment_register_buyer_and_seller"
        tools:layout="@layout/fragment_register_buyer_and_seller" />
    <fragment
        android:id="@+id/sellerRegisterFragment"
        android:name="com.a.luxurycar.code_files.ui.auth.fragment.SellerRegisterFragment"
        android:label="fragment_seller_register"
        tools:layout="@layout/fragment_seller_register" />
</navigation>